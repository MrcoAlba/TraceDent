<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="6dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            tools:text="Lissy Marianella Tavara Iparraguirre"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_margin="3dp"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvDistrito"
            app:layout_constraintBottom_toTopOf="@+id/tvTipo"/>
        <TextView
            android:id="@+id/tvTipo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            tools:text="Lissy Marianella Tavara Iparraguirre"
            android:gravity="center"
            android:layout_margin="3dp"
            android:ellipsize="end"
            android:singleLine="true"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toBottomOf="@id/tvNombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvDistrito"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvDistrito"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            tools:text="San Juan de Lurigancho"
            android:gravity="center"
            android:layout_margin="3dp"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvNombre"
            app:layout_constraintEnd_toStartOf="@id/tvRating"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            tools:text="4.96"
            android:gravity="center"
            android:layout_margin="3dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvDistrito"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>